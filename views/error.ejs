<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title>Ошибка</title>
    <style type="text/css">
        * { font-family: Arial; }
        html, body { height:100%; margin:0px; }
        h1 { color: #7F7F7F; margin:0px; font-size:16pt; }
        a img { border: none; }
        .caption { text-align: left; margin-top:1em; margin-bottom:1em; font-size:10pt; }
    </style>
</head>
<body>
   <table border="0" cellpadding="0" cellspacing="0" width="100%" height="100%">
       <tr>
            <td align="center">
                <table border="0" cellpadding="0" cellspacing="0" width="500">
                    <tr>
                        <td align="center" height="128">
                            <a href="/"><img src="images/logo-128x116.png" /></a>
                        </td>
                    </tr>
                    <tr>
                        <td align="center">
                            <h1><%= error.status %>: <%= message %></h1>
                            <% if (error.stack) { %>
                            <div class="caption">
                                <pre><%= error.stack %></pre>
                            </div>
                            <% } %>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>